# Firebase Configuration (Frontend)
# Get these values from your Firebase project settings
VITE_FIREBASE_API_KEY=REPLACE_WITH_YOUR_FIREBASE_API_KEY
VITE_FIREBASE_AUTH_DOMAIN=REPLACE_WITH_YOUR_FIREBASE_AUTH_DOMAIN
VITE_FIREBASE_PROJECT_ID=REPLACE_WITH_YOUR_FIREBASE_PROJECT_ID
VITE_FIREBASE_STORAGE_BUCKET=REPLACE_WITH_YOUR_FIREBASE_STORAGE_BUCKET
VITE_FIREBASE_MESSAGING_SENDER_ID=REPLACE_WITH_YOUR_FIREBASE_MESSAGING_SENDER_ID
VITE_FIREBASE_APP_ID=REPLACE_WITH_YOUR_FIREBASE_APP_ID
VITE_FIREBASE_MEASUREMENT_ID=REPLACE_WITH_YOUR_FIREBASE_MEASUREMENT_ID

# Netlify Functions Base URL (optional, defaults to /.netlify/functions)
VITE_FUNCTIONS_BASE_URL=/.netlify/functions

# Email Link Redirect URL (optional, defaults to /auth)
VITE_EMAIL_LINK_REDIRECT_URL=http://localhost:5173/auth

# Netlify Environment Variables (set these in Netlify dashboard, not in .env)
# These are only needed for Netlify functions, not for local development

# Firebase Service Account - Method 1: Individual Variables (RECOMMENDED)
# Extract these from your Firebase service account JSON file
FIREBASE_PROJECT_ID=REPLACE_WITH_YOUR_FIREBASE_PROJECT_ID
FIREBASE_CLIENT_EMAIL=REPLACE_WITH_SERVICE_ACCOUNT_EMAIL
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nREPLACE_WITH_PRIVATE_KEY\n-----END PRIVATE KEY-----
# Optional fields (usually not needed)
# FIREBASE_PRIVATE_KEY_ID=REPLACE_WITH_PRIVATE_KEY_ID
# FIREBASE_CLIENT_ID=REPLACE_WITH_CLIENT_ID
# FIREBASE_CLIENT_X509_CERT_URL=REPLACE_WITH_CLIENT_X509_CERT_URL

# Firebase Service Account - Method 2: JSON String (Alternative)
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"...","private_key":"..."}

# Email Configuration
RESEND_API_KEY=REPLACE_WITH_RESEND_API_KEY
RESEND_FROM=you@example.com
RESEND_SMTP_PORT=587
UNSUBSCRIBE_SECRET=REPLACE_WITH_GENERATED_SECRET

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    match /timeline_updates/{docId} {
      allow read: if isSignedIn();
      // Write access is enforced by Netlify functions (backend-only)
      allow write: if false;
    }

    match /users/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow write: if false;
    }

    match /approved_domains/{docId} {
      allow read, write: if false;
    }

    match /admins/{docId} {
      // Authenticated users can read admin documents to check their own status
      // Actual admin actions are still enforced by backend (Netlify functions)
      allow read: if isSignedIn();
      // Write access is only via backend (Netlify functions)
      allow write: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
